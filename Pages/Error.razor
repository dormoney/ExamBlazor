@page "/Error"

<PageTitle>IT Школа - Ошибка</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center text-danger">Ошибка</h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="oi oi-warning" style="font-size: 4rem; color: #dc3545;"></i>
                    </div>
                    
                    <h4>Что-то пошло не так</h4>
                    <p class="text-muted">
                        Произошла непредвиденная ошибка. Пожалуйста, попробуйте обновить страницу или вернуться на главную.
                    </p>
                    
                    <div class="mt-4">
                        <button class="btn btn-primary me-2" @onclick="@(() => navigationManager.NavigateTo("/"))">
                            На главную
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="@(() => navigationManager.NavigateTo(navigationManager.Uri))">
                            Обновить страницу
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] private NavigationManager navigationManager { get; set; }
}
